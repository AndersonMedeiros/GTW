<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center_horizontal"
android:orientation="vertical"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="com.example.andersonmedeiros.gtow.Tinta"
tools:showIn="@layout/activity_tinta">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_padding"
            android:paddingLeft="@dimen/activity_horizontal_padding"
            android:paddingRight="@dimen/activity_horizontal_padding"
            android:paddingTop="@dimen/activity_vertical_padding"
            android:weightSum="100">


            <LinearLayout
                android:id="@+id/ll_ambiente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_n_amb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/black"
                    android:text="Ambiente:"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="50">

                        <EditText
                            android:id="@+id/edt_txt_alt_amb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Altura"
                            android:inputType="number"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColorLink="@android:color/holo_green_light" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="50">

                        <EditText
                            android:id="@+id/edt_txt_larg_amb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Largura"
                            android:inputType="number"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColorLink="@android:color/holo_green_light" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50">

                    <EditText
                        android:id="@+id/edt_txt_qtde_demao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Quantidade de DemÃ£os"
                        android:inputType="number"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColorLink="@android:color/holo_green_light" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/tv_perg_porta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="Possui porta?"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50">

                        <EditText
                            android:id="@+id/edt_txt_larg_porta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Largura Porta"
                            android:inputType="number"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColorLink="@android:color/holo_green_light" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50">

                        <EditText
                            android:id="@+id/edt_txt_alt_porta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Altura Porta"
                            android:inputType="number"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColorLink="@android:color/holo_green_light" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50">

                    <EditText
                        android:id="@+id/edt_txt_qtde_porta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Quantidade de Portas"
                        android:inputType="number"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColorLink="@android:color/holo_green_light" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/tv_perg_janela"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="Possui Janela?"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50">

                        <EditText
                            android:id="@+id/edt_txt_larg_janela"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Largura Janela"
                            android:inputType="number"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColorLink="@android:color/holo_green_light" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50">

                        <EditText
                            android:id="@+id/edt_txt_alt_janela"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Altura Janela"
                            android:inputType="number"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColorLink="@android:color/holo_green_light" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50">

                    <EditText
                        android:id="@+id/edt_txt_qtde_janela"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Quantidade de Janelas"
                        android:inputType="number"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColorLink="@android:color/holo_green_light" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50">

                    <EditText
                        android:id="@+id/edt_txt_rend_lata"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Rendimento da lata"
                        android:inputType="number"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColorLink="@android:color/holo_green_light" />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <Button
                android:id="@+id/bt_calcular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@android:color/black"
                android:text="CALCULAR"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
